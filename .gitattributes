* text=auto
*.py text eol=lf
*.yml text eol=lf
*.json text eol=lf
*.md text eol=lf


# Handle line endings automatically
* text=auto

# Python source code
*.py text eol=lf diff=python

# Config / Data files
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Shell scripts
*.sh text eol=lf

# Ignore diffs for binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.zip binary

# GitHub linguist overrides
# Force GitHub to detect Python as the main language
*.yml linguist-detectable=false
*.json linguist-detectable=false
